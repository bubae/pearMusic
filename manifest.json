{
  "name": "Pear Music",
  "description": "Music player in youtube",
  "manifest_version": 2,
  "minimum_chrome_version": "23",
  "version": "1.2.5",
  "offline_enabled": false,
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "permissions" : [
    "clipboardWrite",
    "webview",
    "storage",
    "https://i.ytimg.com/*",
    "http://apis.skplanetx.com/melon/*"
  ],
  "icons": {
    "16": "assets/icon-128x128.png",
    "128": "assets/icon-128x128.png"
  },
  "webview": {
    "partitions": [
      {
        "name": "static",
        "accessible_resources": ["sandbox.html", "public/css/sandbox.css", "public/js/sandbox.js", "library/jquery-ui.min.js", "library/jquery-2.2.4.min.js", "library/iframe_api.js", "library/www-widgetapi.js"]
      }
    ]
  }
}
